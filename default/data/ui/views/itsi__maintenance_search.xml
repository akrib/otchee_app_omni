  </html>
    </panel>
    <panel id="titre_option">
      <input id="current_dt" type="checkbox" token="searchbar_current_dt" searchWhenChanged="true">
        <label></label>
        <choice value="1">Maintenance en cours</choice>
        <change>
          <condition>
            <eval token="search_for_current_dt">if($search_for_current_dt$="flag_dt=1","flag_dt=*","flag_dt=1")</eval>
          </condition>
        </change>
        <delimiter/>
      </input>
      <input id="queldate" type="time" token="queldate">
        <label></label>
        <default>
          <earliest>0</earliest>
          <latest>-5s</latest>
        </default>
        <change>
          <eval token="queldate.earliest_epoch">if(isnum('earliest'),'earliest',relative_time(now(),'earliest')</eval>
          <eval token="queldate.latest_epoch">if(isnum('latest'),'latest',relative_time(now(),'latest')</eval>
          <eval token="queldate.datestring">strftime(if(isnum('latest'),'latest',relative_time(now(),'latest')),"%Y-%m-%d %H:%M:%S")</eval>
        </change>
      </input>
    </panel>
  </row>
  <row>
    <panel id="searchbar_bas" rejects="$searchbar_filter$">
      <input id="searchbar" type="text" token="input_search" searchWhenChanged="true">
        <label></label>
        <default></default>
        <initialValue></initialValue>
        <prefix>*</prefix>
        <suffix>*</suffix>
        <change>
          <condition match="len($value$)!=0">
            <unset token="basic"></unset>
            <set token="basic"></set>
            <eval token="basic">"_raw=*".replace($input_search$," ", "* AND _raw=*")</eval>
          </condition>
          <condition>
            <unset token="basic"></unset>
            <unset token="NbEnregistrement"></unset>
            <unset token="querytime"></unset>
            <unset token="Data2HTML"></unset>
          </condition>
        </change>
      </input>
    </panel>
