        </table>
                <table id="contentdatahtml"/>
            </html>
    </panel>
  </row>
  <row depends="$hide$">
    <panel>
      <title>Simple</title>
      <table>
        <search base="basique">
          <progress>
            <!-- Set the token to Show Spinner when the search is running -->
            <unset token="showSpinner"></unset>
            <set token="showSpinner">true</set>
            <unset token="search_done"></unset>
            <unset token="Data2HTML"></unset>
            <set token="search_done"></set>
          </progress>
          <done>
            <!-- Unset the token to Hide Spinner when the search completes -->
            <unset token="showSpinner"></unset>
            <unset token="search_done"></unset>
            <set token="search_done">Résultats de votre recherche</set>
            <unset token="NbEnregistrement"></unset>
            <set token="NbEnregistrement">$result.nbEnreg$</set>
            <unset token="querytime"></unset>
            <set token="querytime"></set>
            <eval token="querytime">round($job.runDuration$,3)</eval>
            <unset token="Data2HTML"></unset>
            <set token="Data2HTML">$result.data2HTML$</set>
          </done>
          <query>| eval cible=if(orig_host="*","TOUS",orig_host),sonde=if(servicename="*","TOUS",servicename),commentaire=commentary
| table client, site, target, cible, sonde, recap, commentaire, creator, dt_action, dt_update, data2HTML
| eval recap=replace(recap,"Monday","Lundi"), recap=replace(recap,"Tuesday","Mardi"), recap=replace(recap,"Wednesday","Mercredi"), recap=replace(recap,"Thursday","Jeudi"), recap=replace(recap,"Friday","Vendredi"), recap=replace(recap,"Saturday","Samedi"), recap=replace(recap,"Sunday","Dimanche"), recap=replace(recap,"weekly","Hebdomadaire"), recap=replace(recap,"monthly","Mensuel"), recap=replace(recap,"between_date","Date à date"), recap=replace(recap,"special_date_first_in_month","Premier du mois"), recap=replace(recap,"special_date_second_in_month","Deuxieme du mois"), recap=replace(recap,"special_date_third_in_month","Troisieme du mois"), recap=replace(recap,"special_date_fourth_in_month","Quatrieme du mois"), recap=replace(recap,"special_date_last_in_month","Dernier du mois")
| eval recap=split(recap,";")
| rename client as CLIENT,site as SITE,target as "TYPE",cible as "ELEMENT",sonde as "NOM DE SONDE",recap as "RECUPITULATIF",commentaire as COMMENTAIRE, dt_action AS "DERNIERE ACTION", dt_update AS "DERNIERE MISE A JOUR", creator AS "AUTEUR", data2HTML AS data2HTML
| eval data2HTML=replace(data2HTML,",", " , ")
| stats count as nbEnreg values(data2HTML) as data2HTML</query>
        </search>
        <option name="count">100</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="wrap">false</option>
      </table>
    </panel>
