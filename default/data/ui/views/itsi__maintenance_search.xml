<form script="omni\convert_token_to_html.js,omni\tooltip.js" stylesheet="omni\lib\semantic.min.css, omni\lib\jquery-ui.min.css" hideEdit="true" version="1.1">
  <label>ITSI : Maintenance search</label>
  <init>
    <unset token="search_done"></unset>
    <unset token="basic"></unset>
    <unset token="advanced"></unset>
    <unset token="form.input_host"></unset>
    <!--<set token="hide">1</set>-->
    <!--<unset token="form.input_search"></unset>
    <unset token="input_search"></unset>-->
    <set token="search_for_current_dt">flag_dt=*</set>
  </init>
  <search id="base_filtre">
    <query>
      <![CDATA[| rest /services/authentication/users splunk_server=local 
           | search [
                    | rest /services/authentication/current-context splunk_server=local 
                    | rename username as title 
                    | fields title] 
                | fields title roles realname 
                | rename title as userName|rename realname as Name  
                | stats values(Name) as Name by userName, roles
                | search NOT roles IN ("client_all_*","user","all_itop_user","*_cds_client","can_*","splk_*","all_omni_user")
                | eval filtre2=case(roles like "%all_cds_adm%", "client=*", roles like "%dms_itoa_%", "client=*", roles like "%rab_%", "client=*", roles like "%admin%", "client=*")    
                | rex field=roles "client_(?<client_name>[^\_]+)_*"
                | eval filtre="client="+client_name 
                | eval filtre=if(isnull(filtre), filtre2, filtre) 
                |stats values(filtre) as filtre by userName,Name
                |mvexpand filtre]]>
        </query>
    <preview>
      <set token="cli_filtre">$result.filtre$</set>
    </preview>
  </search>
  <search id="basique">
    <query>
<![CDATA[
| inputlookup omni_kv_def
| eval orig_time=$queldate.latest_epoch$
| spath input=downtime
| rename {}.id as dt_id, {}.dt_type as dt_type, {}.begin_date as begin_date, {}.end_date as end_date, {}.begin_time as begin_time, {}.end_time as end_time, {}.dt_filter as period_dt_filter, {}.dt_pattern as period_dt_pattern
| eval nbperiode=mvcount(dt_id), omni_skip_filter=1
| omnidowntimecalculation epoctime="orig_time" dtfield="downtime" outputfield="flag_dt" skip_filter=omni_skip_filter
| eval entity=mvjoin(entity, ";"),
       kpi=mvjoin(kpi,";"),
       service=mvjoin(service, ";")
| eval _raw=downtime.";".commentary.";".creator.";".dt_update.";".entity.";".kpi.";".service.";".version.";".ID.";".dt_filter.";".dt_pattern
| eval downtimes=""
| foreach dt_type 
    [eval downtimes=downtimes."<tr class='dt_period'><td><b>Type:</b></td><td><span class=tag_dt>".replace(replace(replace(replace(replace(replace(replace('<<FIELD>>',"Tuesday","Mardi"),"Monday","Lundi"),"Wednesday","Mercredi"),"Thursday","Jeudi"),"Friday","Vendredi"),"Saturday","Samedi"),"Sunday","Dimanche")."</span></td><td><b>Date de début:</b></td><td><span class=tag_dt>".mvindex(begin_date,<<MATCHSEG1>>-1)."</span></td><td><b>Heure de début:</b></td><td><span class=tag_dt>".mvindex(begin_time,<<MATCHSEG1>>-1)."</span></td><td><b>Date de fin:</b></td><td><span class=tag_dt>".mvindex(end_date,<<MATCHSEG1>>-1)."</span></td><td><b>Heure de fin:</b></td><td><span class=tag_dt>".mvindex(end_time,<<MATCHSEG1>>-1)."</span></td></tr>"]
| eval downtimes="<br><table width='100%'>".downtimes."</table>"
| eval last_update=strftime(round(dt_update/1000,0),"%Y-%m-%d %H:%M:%S")
| eval entity=if(entity=="*", "Tous", entity),
       kpi=if(kpi=="*", "Tous", kpi), 
       service=if(service=="*","Tous",service)
| eval  entity_tag="<span class='tag'>" 
       + replace(entity, ";", "</span><span class='tag'>") 
       + "</span>", kpi_tag="<span class='tag'>" 
       + replace(kpi, ";", "</span><span class='tag'>") 
       + "</span>", service_tag="<span class='tag'>" 
       + replace(service, ";", "</span><span class='tag'>") 
       + "</span>"
| eval dt_filter_display=if(step_opt=="000", "<br><span class='fieldlist'>Custom filter(s) : </span><span class='tag'>".replace(dt_filter, ";", "</span><span class='tag'>")."</span>", "")
| eval dt_pattern_display="<br><span class='fieldlist'>Pattern(s) : </span><span class='tag'>".replace(dt_pattern, ";", "</span><span class='tag'>")."</span>"
| eval dt_type_category=if(step_opt=="000", "CUSTOM" , "ITSI")
| eval dt_type_badge=if(dt_type_category=="ITSI", "<span class='dt-type-badge dt-type-itsi'>ITSI</span>", "<span class='dt-type-badge dt-type-custom'>CUSTOM</span>")
| eval modify_link=if(dt_type_category=="ITSI", "./itsi__modify_maintenance?DT_ID=".ID."&selected_version=".version, "./itsi__modify_custom_maintenance?DT_ID=".ID."&selected_version=".version)
| eval data2HTML="<tr class='row-search'>"
+ "<td class='col-search'><div class='title-search'> ".dt_type_badge." ID [ " 
+ ID 
+ " ] ".if(flag_dt==1,"<span class='led' type='up'></span>","<span class='led' type='down'></span>")." <span class='tag-search-li pull-right'><b class='search-bold'>  Auteur:</b> " + creator +"</span>"
+ "<span class='tag-search-li pull-right'><b class='search-bold'>  Derniere MAJ:</b> " + last_update + "</span>"
+"</div>"
+ "<span class='fieldlist'>entity : </span>" + entity_tag + "<br>"
+ "<span class='fieldlist'>kpi : </span>" + kpi_tag + "<br>"
+ "<span class='fieldlist'>service : </span>" + service_tag + "<br>"
+ dt_filter_display
+ dt_pattern_display
+ "<div class='accordion'><div>"
+ "<input type='checkbox' name='panel' id='panel-".ID."'>"
+ "<label for='panel-".ID."'>Informations complémentaire</label>"
+ "<div class='accordion__content accordion__content--small'>"
+ "<p class='accordion__body'>".downtimes
+ "<br><blockquote class='comment-block'><b>Commentaire :</b><span class='tag_comment'> "
+ commentary
+ "</span></blockquote></p>"
+ "</div></div></div>"
+ "</td><td class='search-option'><div class='title-search last-col'>OPTIONS</div>"
+"<a href='./itsi__maintenance_logs?form.input_ID="
+ ID
+ "' target='_blank'><img class='img-option' src='/static/app/otchee_app_omni/media/analytics.gif' width='75px' alt='Trace Logs' title='Trace Logs'></img></a><br>"
+"<a href='"
+ modify_link
+ "' target='_blank'><img class='img-option' src='/static/app/otchee_app_omni/media/browser.gif' width='75px' alt='Modifier' title='Modifier'></img></a><br>"
+"<a href='./itsi__maintenance_target?form.DT_ID="
+ ID
+ "' target='_blank'><img class='img-option' src='/static/app/otchee_app_omni/media/reading-mode.gif' width='75px' alt='Portée de la maintenance' title='Portée'></img></a><br><br>"
+"<a href='./itsi__delete_maintenance?DT_ID="
+ ID
+ "' target='_blank' class='pull-bottom'><img class='img-option' src='/static/app/otchee_app_omni/media/poubelle.gif' width='65px' alt='Supprimer' title='Supprimer'></img></a>"
+"</td></tr>"
| search $basic$ $search_for_current_dt$
            ]]>
        </query>
    <progress>
      <unset token="NbEnregistrement"></unset>
      <unset token="querytime"></unset>
      <unset token="Data2HTML"></unset>
    </progress>
    <earliest></earliest>
    <latest>now</latest>
  </search>
